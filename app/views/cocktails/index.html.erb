<h1>Fancy Cocktails</h1>
<div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-4">
      <%= link_to cocktail_path(cocktail) do  %>
        <div class="card-product mb-4">
          <%= image_tag "https://source.unsplash.com/featured/?#{cocktail.name}", alt: "alttext", height: 100 %>
          <div class="card-product-infos">
          <p><%=cocktail.name%></p>
          </div>
        </div>
      <% end %>
    </div>
    <% end %>
</div>
<p class="btn m-5 p-2"><%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-primary" %></p>



